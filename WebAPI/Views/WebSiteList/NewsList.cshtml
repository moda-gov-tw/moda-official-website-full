                            <div class="searchI-R">
                                <a href="javascript:;" title="@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-7-9")?.Value" class="calendarBtn1"><span class="visually-hidden">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-7-9")?.Value</span></a>
                            </div>
                        </div>
                    </div>
                    @foreach (var condition in md.Conditions)
                    {
                        var i = condition.Split('-')?[1] ?? "";
                        if (i == "8")
                        {
                            <div class="searchIw1">
                                <div class="searchI">
                                    <div class="searchI-L">
                                        <label for="CustomizeTags">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-8")?.Value：</label>
                                    </div>
                                    <div class="searchI-C">
                                        <select id="CustomizeTags" class="sel1 rounded-4">
                                            <option value="">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-7-64")?.Value</option>
                                            @foreach (var Tag in md.CustomizeTags)
                                            {
                                                <option value="@Tag.WebLevelCustomizeTagSn">@Tag.TagName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="searchIw1">
                                <div class="searchI">
                                    <div class="searchI-L">
                                        <label for="Condition@(i)">@(md.langCategory.FirstOrDefault(x => x.SysCategoryKey == condition)?.Value)：</label>
                                    </div>
                                    <div class="searchI-C">
                                        <select id="Condition@(i)" class="sel1 rounded-4">
                                            <option value="">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-7-64")?.Value</option>
                                            @foreach (var cate in md.langCategory.Where(x => x.ParentKey == condition).OrderBy(x => x.SortOrder).ToList())
                                            {
                                                <option value="@cate.SysCategoryKey">@cate.Value</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @if (md.WebLevel.Module == "Schedule")
                    {
                        <div class="searchIw1">
                            <div class="searchI">
                                <div class="searchI-L">
                                    <label for="Chief">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==Model.SysWebSiteLang.WebSiteID+"-13")?.Value：</label>
                                </div>
                                <div class="searchI-C">
                                    <select id="Chief" class="sel1 rounded-4">
                                        <option value="">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==Model.SysWebSiteLang.WebSiteID+"-7-64")?.Value</option>
                                        @foreach (var chief in md.langCategory.Where(x => x.IsEnable == "1" && x.ParentKey == Model.SysWebSiteLang.WebSiteID + "-13").OrderBy(x => x.SortOrder))
                                        {
                                            <option value="@chief.SysCategoryKey">@($@"{chief.Value}{chief.Description}")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="searchIw1">
                            <div class="searchI">
                                <div class="searchI-L">
                                    <label for="SysZipCode">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-7-75")?.Value：</label>
                                </div>
                                <div class="searchI-C">
                                    <select id="SysZipCode" class="sel1 rounded-4">
                                        <option value="">@md.langCategory.FirstOrDefault(x=>x.SysCategoryKey==md.SysWebSiteLang.WebSiteID+"-7-64")?.Value</option>
                                        @foreach (var zipCode in md.sysZipCodes)
                                        {
                                            <option value="@zipCode.ZipCodeSn">@zipCode.Title</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    }
