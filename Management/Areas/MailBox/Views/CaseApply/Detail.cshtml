                                    btns.Add(new btnModel() { Btntype = btnModel.btntype.暫存, onclickFunction = "saveFun()" });
                                    btns.Add(new btnModel() { Btntype = btnModel.btntype.發信, onclickFunction = "checkSend()" });
                                    btns.Add(new btnModel() { Btntype = btnModel.btntype.取消, onclickFunction = "back()" });
                                    <partial name="~/Views/Common/Btn/BtnPublicVersion.cshtml" model="btns" />
                                }
                                else
                                {
                                    <span style="color:red">案件已結案</span>
                                }
                            }
