@Html.AntiForgeryToken()
@section scripts{
    <script>
        if ("@finishType.Contains(md.caseApply.Status)" == "True") {
            $("#ReplySource2").attr("disabled", "disabled");
            $(".filetitle").attr("disabled", "disabled");
            $(".test_btn").hide();
            $(".ubtn-delete").hide();
        }
        function changeTab(e) {
            $(".tabDiv").hide();
            var showdiv = getObjAtr(e, "data-type");
            $("#" + showdiv + "_div").show();
            $('.nav-tabs .nav-link').removeClass('active');
            e.addClass('active');
        }
        function back() {
            SetCookie("back", 1);
            location.href = '@Url.Action("Index","CaseApply", new { area="MailBox"})';
        }
        function saveFun() {
            var obj = {
                CaseApplySN: '@md.caseApply.CaseApplySN',
                ReplySource2: $("#ReplySource2").val(),
            };
            $.ajax({
                url: '@Url.Action("SaveCaseApply", "CaseApply", new { area = "MailBox" })',
                type: 'post',
                data: obj,
                headers:
                {
                    "CUSTOMER-CSRF-HEADER": $("input[name='CustomerFieldName']").val() //注意header要修改
                },
                dataType: "json",
                success: function (data) {
                    $('.preloader').hide();
                    if (data.statusCode == 200) {
                        Swal.fire({
                            icon: "success",
                            title: "儲存成功。"
                        }).then(function () {

                        });
                    }
                    else {
                        Swal.fire({
                            icon: "warning",
                            title: data.content
                        });
                    }
                }
            });
        }
        function checkSend() {
            Swal.fire({
                title: '發信後無法收回，請確認是否發回覆信給申請人。',
                icon: 'warning',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: '確定',
                denyButtonText: '取消',
            }).then((result) => {
                if (result.isConfirmed) {
                    sendFun();
                } else if (result.isDenied) {
                    Swal.fire('已取消!', '', 'info')
                }
            })
        }
        function sendFun() {
            var obj = {
                CaseApplySN: '@md.caseApply.CaseApplySN',
                ReplySource2: $("#ReplySource2").val(),
            };
            $.ajax({
                url: '@Url.Action("SendMail", "CaseApply", new { area = "MailBox" })',
                type: 'post',
                data: obj,
                headers:
                {
                    "CUSTOMER-CSRF-HEADER": $("input[name='CustomerFieldName']").val() //注意header要修改
                },
                dataType: "json",
                success: function (data) {
                    $('.preloader').hide();
                    if (data.statusCode == 200) {
                        Swal.fire({
                            icon: "success",
                            title: "信件已寄送"
                        }).then(function () {
                            back();
                        });
                    }
                    else {
                        Swal.fire({
                            icon: "warning",
                            title: data.content
                        });
                    }
                }
            });
        }
    </script>
}