@model Services.Models.WebSite.WebSiteChildModel
@{
    var masterModel = ViewData["WebSiteMaster"] as Services.Models.WebSite.WebSiteMasterModel;
    var LangSysCategory = masterModel.sysCategories;
}
<section class="idxPartner" data-aos="fade-up">
    <div class="wrap5 mx-auto px-3 px-md-4 px-lg-5">
        <div class="wrap7">
            <!-- content -->
            <div class="listWrap1 position-relative">
                <div class="idxList3 list2 position-relative">
                    <button type="button" class="swiper-button-prev idxList3SwiperPrevBtn border-0 rounded-circle start-0 idxList3SwiperPrevBtnJs" title="@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-31")?.Value"><span>@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-31")?.Value</span></button>
                    <div class="swiper idxList3Swiper idxList3SwiperJs">
                        <div class="swiper-wrapper">
                            @if(Model?.NewsViews != null)
							{
								foreach (var item in Model.NewsViews)
                                {
                                      var tagModel = CommFun.taggetattr(item.BasicNews.target, item.BasicNews.Title, LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-33")?.Value);
                                    <div class="swiper-slide">
                                        <a class="d-block" href="@item.BasicNews?.URL" title="@tagModel.title" @(!string.IsNullOrWhiteSpace(tagModel.rel) ? $"rel={tagModel.rel}":"") target="@tagModel.target">
                                            <div class="listPic">
                                                <div class="bg-full"></div>
                                                <span class="listIcon lazy" data-bg="@item.MainImg?.FilePath"></span>
                                            </div>
                                            <b class="title5">@item.BasicNews?.Title</b>
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <button type="button" class="swiper-button-next idxList3SwiperNextBtn border-0 rounded-circle end-0 idxList3SwiperNextBtnJs" title="@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-32")?.Value"><span>@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-32")?.Value</span></button>
                    <div class="idxList3SwiperNav swiper-pagination idxList3SwiperPageJs"></div>
                </div>
            </div>
        </div>
    </div>
</section>