@model Services.Models.WebSite.WebSiteChildModel
@{
    var masterModel = ViewData["WebSiteMaster"] as Services.Models.WebSite.WebSiteMasterModel;
    var LangSysCategory = masterModel.sysCategories;
}
<section class="idxLinks" data-aos="fade-up">
    <div class="wrap5 mx-auto px-3 px-md-4 px-lg-5">
        <div class="wrap7">
            <!-- title -->
            <div class="titleBar1 text-center">
                <h2 class="title1 pb-4 pb-md-5"><span>@Html.Raw(Model?.LevelView.BasicLevel.Title)</span></h2>
            </div>
            <!-- content -->
            <div class="idxList6 position-relative imgCover">
                <button type="button" class="swiper-button-prev idxList6SwiperPrevBtn border-0 rounded-circle start-0 idxList6SwiperPrevBtnJs" title="@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-31")?.Value"><span>@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-31")?.Value</span></button>

                <div class="swiper idxList6Swiper idxList6SwiperJs">
                    <div class="swiper-wrapper">
                        @if(Model?.NewsViews != null)
						{
							foreach (var item in Model.NewsViews)
                            {
                                  var tagModel = CommFun.taggetattr(item.BasicNews.target, item.BasicNews.Title, LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-33")?.Value);
                                <div class="swiper-slide">
                                    <a href="@item.BasicNews?.URL" title="@tagModel.title" @(!string.IsNullOrWhiteSpace(tagModel.rel) ? $"rel={tagModel.rel}":"") target="@tagModel.target">
                                        <div class="pic rounded-4"><img loading="lazy" src="@item.MainImg?.FilePath" alt="@item.BasicNews?.Title"></div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>

                <button type="button" class="swiper-button-next idxList6SwiperNextBtn border-0 rounded-circle end-0 idxList6SwiperNextBtnJs" title="@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-32")?.Value"><span>@LangSysCategory.FirstOrDefault(x=>x.SysCategoryKey==masterModel.Master.WebSiteID +"-7-32")?.Value</span></button>
                <div class="idxList6SwiperNav swiper-pagination idxList6SwiperPageJs"></div>
            </div>

        </div>
    </div>
</section>